{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "api/**/*",
    "lib/**/*",
    "types/**/*",
    "config/**/*",
    "utils/**/*",
    "middleware/**/*",
    "services/**/*",
    "handlers/**/*",
    "tests/**/*",
    "*.ts"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
