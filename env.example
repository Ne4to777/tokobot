# Telegram Bot Token (получите у @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# ===== AI ПРОВАЙДЕРЫ (выберите один) =====

# YandexGPT + SpeechKit (РЕКОМЕНДУЕТСЯ ДЛЯ РФ! Бесплатно 1000 запросов/месяц)
# Получите на https://cloud.yandex.ru/services/yandexgpt
# YANDEX_API_KEY используется также для распознавания голосовых сообщений (SpeechKit)
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_yandex_folder_id_here

# Groq API Key (опционально, работает из РФ, 14400 запросов/день)
# Получите бесплатно на https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API Key (опционально, НЕ работает из РФ)
# Получите бесплатно на https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Hugging Face Token (опционально, работает из РФ)
# Получите бесплатно на https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# AI Provider (опционально, по умолчанию 'yandexgpt')
# Возможные значения: 'yandexgpt', 'groq', 'gemini', 'huggingface'
AI_PROVIDER=yandexgpt

# Bitrix24 Webhook URL (опционально, для интеграции с CRM)
# Формат: https://your-domain.bitrix24.ru/rest/1/xxxxxxxxxx/
BITRIX24_WEBHOOK=your_bitrix24_webhook_url_here

