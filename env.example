# Telegram Bot Token (получите у @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# AI Provider (gemini или huggingface)
# По умолчанию: gemini (рекомендуется)
AI_PROVIDER=gemini

# Google Gemini API Key (рекомендуется, бесплатно 1500 запросов/день)
# Получите на https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Hugging Face Token (альтернатива Gemini, менее стабильно)
# Получите бесплатно на https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Bitrix24 Webhook URL (опционально, для интеграции с CRM)
# Формат: https://your-domain.bitrix24.ru/rest/1/xxxxxxxxxx/
BITRIX24_WEBHOOK=your_bitrix24_webhook_url_here

