# Telegram Bot Token (получите у @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# AI Provider (groq, gemini или huggingface)
# По умолчанию: groq (рекомендуется для РФ)
AI_PROVIDER=groq

# Groq API Key (рекомендуется, работает в РФ, 14400 запросов/день)
# Получите на https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API Key (НЕ работает в РФ, 1500 запросов/день)
# Получите на https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Hugging Face Token (альтернатива, менее стабильно)
# Получите бесплатно на https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Bitrix24 Webhook URL (опционально, для интеграции с CRM)
# Формат: https://your-domain.bitrix24.ru/rest/1/xxxxxxxxxx/
BITRIX24_WEBHOOK=your_bitrix24_webhook_url_here

